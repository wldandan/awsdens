<%= form_for @product, :html => { :class => "form-horizontal"} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label :name, "订单编号:",:class=>"control-label" %>
    <div class="controls"> <%= f.text_field :name %> </div>
  </div>

  <div class="control-group">
    <%= f.label :clinic_id, "所属诊所:",:class=>"control-label" %>
    <!-- <div class="controls"> <%= f.number_field :clinic_id %> </div> -->
    <div class="controls"><%= f.select(:clinic_id, Clinic.all.collect {|p| [ p.name, p.id ] }, {:prompt =>'选择诊所'}) %></div>
  </div>

  <div class="control-group">
    <%= f.label :doctor_id, "主治医生:",:class=>"control-label" %>
    <!-- <div class="controls"> <%= f.number_field :doctor_id %> </div> -->
    <div class="controls"><%= f.select(:doctor_id, Doctor.all.collect {|p| [ p.name, p.id ] }, {:prompt =>'选择医生'}) %></div>
  </div>

  <div class="control-group">
    <%= f.label :responser, "负责人:",:class=>"control-label" %>
    <div class="controls"> <%= f.text_field :responser %> </div>
  </div>

  <div class="control-group">
    <%= f.label :description, "描述信息:",:class=>"control-label" %>
    <div class="controls"><%= f.text_area :description, :rows=>"3" %></div>
  </div>

  <div class="control-group">
    <div class="controls">
    <%= submit_tag "保存",:class => "btn btn-small"%>
    <%= link_to '取消', products_path, :class=>'btn btn-small' %>
    </div>
  </div>
    
<% end %>